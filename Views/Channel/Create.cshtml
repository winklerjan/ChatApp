@{
    Layout = "_Layout";
    ViewBag.Title = "Add a Channel";
}

    <h2>Create a new channel</h2>
    <form asp-action="create" asp-controller="channel" method="post">
        <label for="name">Name:</label>
        <input type="text" name="name" required/>
        <label for="description">Description: </label>
        <input type="text" name="description" required/>
        <button type="submit">CREATE</button>
    </form>
<p>OR</p>
<h2>Add an existing channel</h2>
<form asp-action="add" asp-controller="channel" method="post">
    <label for="name">Name:</label>
    <input type="text" name="name" required />
    <label for="description">Description: </label>
    <input type="text" name="description" required />
    <label for="channelId">Channel ID:</label>
    <input type="number" name="channelId" required />
    <label for="channelSecret">Secret Key: </label>
    <input type="text" name="channelSecret" required />
    <button type="submit">ADD</button>
</form>